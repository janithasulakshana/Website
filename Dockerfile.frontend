FROM node:24-alpine

WORKDIR /app

# Copy package files
COPY frontend/package*.json ./

# Install dependencies
RUN npm install

# Copy application code
COPY frontend/ ./

# Expose port
EXPOSE 5173

# Set environment
ENV VITE_API_BASE_URL=http://localhost:5000

# Start development server
CMD ["npm", "run", "dev", "--", "--host"]
